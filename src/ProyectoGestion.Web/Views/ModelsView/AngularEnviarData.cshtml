
<style>
    th {
    margin: auto;
    text-align: center;
    }
    td {
    margin: auto;
    text-align: center;
    }
</style>
<br />

 <input type="button" class="btn btn-primary" id="Create" name="Create" value="Create" onclick="window.location='@Url.Action("Create")'"/>

<body ng-app="ngAppRepert">
    <div class="form-horizontal" ng-controller="ngAppReperts">
        <table class="table table-dark" align="center">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Photo</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Password</th>
                    <th colspan="2" scope="col" class="col-sm-1">Opciones</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="x in usuarios">
                    <td class="col-sm-1" >{{ x.id }}</td>
                    <td class="col-sm-1" >{{ x.name }}</td>
                    <td class="col-sm-1" >{{ x.lastName }}</td>
                    <td class="col-sm-1" >{{ x.photo }}</td>
                    <td class="col-sm-1" >{{ x.userName }}</td>
                    <td class="col-sm-1" >{{ x.password }}</td>
                    <td><input type="button" class="btn btn-success col-sm-8" value="{{ Editar }}" />
                    <td><input type="button" class="btn btn-danger col-sm-8" value="{{ Borrar }}" />
                </tr>
            </tbody>
        </table>
    </div>
</body>
