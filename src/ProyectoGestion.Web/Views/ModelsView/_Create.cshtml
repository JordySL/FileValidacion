@model ProyectoGestion.Models.EntityForm.UserAccountPhoto
<body ng-app="Example" >
    <div class="form-horizontal" ng-controller="ExampleController">
        <h4>Models</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" ng-model="NuevoItem.Name" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LastName" class="form-control" ng-model="NuevoItem.LastName" />
                <span asp-validation-for="LastName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input type="text" asp-for="UserName" class="form-control"  value="{{ NuevoItem.Name[0] + NuevoItem.LastName }}" disabled/>
                <span asp-validation-for="UserName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" ng-model="NuevoItem.Password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" ng-click="agregarNuevoItem()"/>
            </div>
        </div>
                <table class="table table-striped">
                    <tr>
                        <td>Nombre</td>
                        <td>Apellido</td>
                        <td>UserName</td>
                        <td>Password</td>
                    </tr>
                    <tr ng-repeat="user in usuario">
                        <td>{{ user.Name }}</td>
                        <td>{{ user.LastName }}</td>
                        <td>{{ user.Name[0] + user.LastName }}</td>
                        <td>{{ user.Password }}</td>
                    </tr>
                </table>
</div>


</body>
